<script>
				function cal() {
							var opr1 = document.getElementById('first').value;	
							var opr2 = document.getElementById('second').value;
							var opr3 = opr2*opr2;
							var opr4 = opr1/opr3;
							document.getElementById("res1").value = opr4;
						if (opr4 >= 18.5){
										document.getElementById("res2").value = "You are healthyðŸ’ª.";
						}if (opr4 < 18.5){
										document.getElementById("res2").value = "You are underweightðŸ˜­.";
						}	if (opr4 > 25){
										document.getElementById("res2").value = "You are overweightðŸ˜Œ.";
						}
						}
</script>
